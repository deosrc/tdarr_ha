{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Home Assistant",
      "type": "shell",
      "command": "/bin/bash ${workspaceFolder}/.vscode/run-ha.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Reset Home Assistant Storage",
      "type": "shell",
      "command": "rm -r ${workspaceFolder}/.data",
      "problemMatcher": []
    }
  ]
}
